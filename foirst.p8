pico-8 cartridge // http://www.pico-8.com
version 21
__lua__

function _init()
    print("init")
    make_player()
end

function _update()
    move_player()
end

function _draw()
    cls()
    map(0, 0, 0, 0, 128, 32)
    draw_player()
    -- this is how you draw a map
end

-- PLAYER
function make_player()
    player = {}
    player.x = 20
    player.y = 20
    player.sprite = 1
    player.speed = 1
end

function move_player()
    if (btn(0)) then player.x -= player.speed end --left
    if (btn(1)) then player.x += player.speed end --right
    if (btn(2)) then player.y -= player.speed end --up
    if (btn(3)) then player.y += player.speed end --down
end

function draw_player()
    spr(player.sprite, player.x, player.y)
end

